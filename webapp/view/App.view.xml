<mvc:View controllerName="helloworld.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" 
                    title="{i18n>title}">
                    <content>
                        <Button id="But1" 
                                text="Hello {test>/user}" 
                                type="Accept"
                                press="onPress"/>
                        <Input id="Inp1"  value="{/user}"
                                description="Hello {/recipient/name}"
                                valueLiveUpdate="true"
                                width="60%"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
